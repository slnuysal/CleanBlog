<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navigation') -%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1>  <%= posts.name %></h1>
            
          <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              on August 24, 2019</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p> <%= posts.name %></p>

          
          <p><%= posts.message %></p>
<!-- Update and Delete Buttons -->
<div class="mt-4">
  <!-- Update Button -->
  <a href="/posts/edit/<%= posts._id %>" class="btn btn-primary">
    Update
  </a>

  <!-- Delete Button -->
  <form action="/posts/<%= posts._id %>?_method=DELETE" method="POST" style="display:inline;">
    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this blog?');">
      Delete
    </button>
  </form>
           </div>
      </div>
    </div>
  </article>

  <hr>

  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
